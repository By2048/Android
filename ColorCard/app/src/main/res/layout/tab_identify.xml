<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_colorDiff"
        android:id="@+id/textColorDiff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textColorDiff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lltv"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="New Text"
            android:id="@+id/sample01"
            android:layout_weight="1"
            android:background="@color/darkblue"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="New Text"
            android:id="@+id/sample02"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/crimson" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="New Text"
            android:id="@+id/sample03"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/darkgreen" />
    </LinearLayout>

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/viewPickedColor"
        android:layout_below="@+id/lltv"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/aqua" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textColorInfo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewPickedColor" />

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/surfaceView5"
        android:layout_below="@+id/textColorInfo"
        android:background="@color/blue" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewPicture"
        android:layout_above="@+id/btnCamera"
        android:background="@drawable/color_card"
        android:layout_below="@+id/textColorInfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/packphoto"
        android:id="@+id/btnCamera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
